<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="8dp"
        tools:context=".ViewActivity">
        <ImageView
            android:id="@+id/singleimageviewVA"
            android:layout_width="match_parent"
            android:layout_height="251dp"
            android:src="@drawable/car1"
            android:scaleType="fitXY"
            android:layout_margin="20dp"/>
        <TextView
            android:id="@+id/txtNameVA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="my Car"
            android:textSize="25dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="#F6F4FA"
            android:layout_below="@+id/singleimageview"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txtEmailVA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="my Car"
            android:textSize="25dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="#F6F4FA"
            android:layout_below="@+id/txtName"
            android:gravity="center"/>
    <Button
        android:id="@+id/ButtonDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEmailVA"
        android:text="Click Delete"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="@color/colorPrimary"
        />



    </RelativeLayout>